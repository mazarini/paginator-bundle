{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    {% embed '@MazariniPaginator/list.html.twig' with {'pages': pages, 'entities': entities, 'data': 3, 'action': 1} only %}

        {% block title %}
            <th>Id</th>
            <th>Label</th>
            <th>actions</th>
        {% endblock %}

        {% block data %}
            <td>{{ entity.id }}</td>
            <td>{{ entity.label }}</td>
        {% endblock %}

        {% block action_href %}
            {{ path('app_article_page', {'id': entity.id}) }}
        {% endblock %}

    {% endembed %}

    {% embed '@MazariniPaginator/pages.html.twig' with {'pages': pages, 'parent': parent} only %}
        {% block href %}{{ path('app_category_page', {'page': page.number}) }}{% endblock %}
    {% endembed %}

{% endblock %}
