{% extends 'base.html.twig' %}

{% block title %}Twig functions{% endblock %}

{% block body %}
<h1>Twig function</h1>
<table class="table">
    <thead>
        <tr>
            <th>Cases</th>
            {% for pages in tests %}
            <th colspan="3">Current page : {{ pages.currentPage }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for i in 0..6 %}
        <tr>
            <th>{{ cases[i] }}</th>
            {% for pages in tests %}
                <td>{{ page_class(pages[i]) }}</td>
                <td>{{ pages[i].label|raw }}</td>
                <td>{{ pages[i].number }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
